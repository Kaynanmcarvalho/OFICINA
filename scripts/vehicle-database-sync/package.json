{
  "name": "vehicle-database-sync",
  "version": "1.0.0",
  "description": "Sistema de sincronização e validação da base de dados de veículos brasileiros com API FIPE",
  "type": "module",
  "scripts": {
    "sync": "node src/index.js",
    "sync:cars": "node src/index.js --type=cars",
    "sync:motos": "node src/index.js --type=motos",
    "sync:trucks": "node src/index.js --type=trucks",
    "sync:brand": "node src/syncBrands.js",
    "add": "node src/addMissing.js",
    "add:dry": "node src/addMissing.js --dry-run",
    "full-sync": "node src/fullSync.js",
    "full-sync:cars": "node src/fullSync.js --type=cars",
    "full-sync:motos": "node src/fullSync.js --type=motos",
    "safe-sync": "node src/syncSafe.js",
    "safe-sync:cars": "node src/syncSafe.js --type=cars",
    "safe-sync:motos": "node src/syncSafe.js --type=motos",
    "safe-sync:resume": "node src/syncSafe.js --resume",
    "validate": "node src/validate.js",
    "report": "node src/report.js",
    "stats": "node src/stats.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.3.1",
    "p-limit": "^5.0.0",
    "p-retry": "^6.2.0"
  }
}
