{
  "name": "vehicle-database-sync",
  "version": "1.0.0",
  "description": "Sistema de sincronização e validação da base de dados de veículos brasileiros com API FIPE",
  "type": "module",
  "scripts": {
    "download": "node src/downloadFipeData.js",
    "sync": "node src/syncFromLocal.js",
    "sync:cars": "node src/syncFromLocal.js --type=cars",
    "sync:motos": "node src/syncFromLocal.js --type=motos",
    "sync:brand": "node src/syncFromLocal.js --brand",
    "apply": "node src/applySync.js",
    "apply:dry": "node src/applySync.js --dry-run",
    "stats": "node src/stats.js",
    "full-sync": "node src/fullSync.js",
    "safe-sync": "node src/syncSafe.js"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "dotenv": "^16.3.1",
    "p-limit": "^5.0.0",
    "p-retry": "^6.2.0"
  }
}
